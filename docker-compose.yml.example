version: '3.8'
services:
  web:
    build:
      context: ./
      dockerfile: Dockerfile
    container_name: zaEngine
    depends_on: 
      - database
    volumes:
      - <local path>:/var/www/html
    ports:
      - 8000:80
  database:
    container_name: DatabaseService
    image: mysql:5.7
    command: --default-authentication-plugin=mysql_native_password
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: <pass>
      MYSQL_DATABASE: <db>
      MYSQL_USER: <user>
      MYSQL_PASSWORD: <pass>
  phpmyadmin:
    image: phpmyadmin/phpmyadmin:latest
    container_name: phpmyadmin
    links:
      - database
    restart: always
    environment:
      PMA_HOST: database
      PMA_PORT: 3306
      PMA_ARBITRARY: 1
    ports:
      - 8080:80