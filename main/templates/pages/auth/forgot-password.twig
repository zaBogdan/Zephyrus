{% extends 'layouts/auth.twig' %}

{% block body %}
{% import 'components/form.twig' as form %}
<div class="col-md-6 ml-auto mr-auto">
      <div class="card">
          <div class="card-header card-header-text card-header-danger">
            <div class="card-text text-center">
              <h4 class="card-title">Reset password</h4>
            </div>
          </div>
          <div class="card-body">
            <p class="text-muted text-center">Please enter your email adress. If it is in our system we will send you the email! It might take up to 5 minutes</p>
            {{ form.input('email', {'type': 'email', 'helpText': "If the email isn't in our database you will not recieve one!", 'required': true})}}
            <div class="text-center">
               <button class="btn btn-success btn-round" type="submit" name="submit">Send email</button>
            </div>
            <div class="text-center">
                <a href="/index.php?page=login" class="d-block small mt-3">Login</a>
                <a href="/index.php?page=register" class="d-block small">Register</a>
            </div>
          </div>
      </div>
  </div>
{% endblock %}