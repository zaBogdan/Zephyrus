{% extends 'auth.twig' %}

{% block content %}
{% set response = sendResetPassword() %}
{% import 'components/forms.twig' as forms %}
<div class="card card-login mx-auto mt-5">
        <div class="card-header">Reset Password</div>
        <div class="card-body">
          <div class="text-center mb-4">
            <p>{{ response }}</p>
          </div>
          <form action="" method="post"> 
            <div class="form-group">
                {{ forms.input("email",'Enter your email',fp.values.email,{'autofocus': true, 'type':'email'})}}
            </div>
            <button class="btn btn-primary btn-block" name="submit">Reset password</button>
          </form>
          <div class="text-center">
            <a class="d-block small mt-3" href="/admin/auth/register">Register an Account</a>
            <a class="d-block small" href="/admin/auth/login">Login Page</a>
          </div>
        </div>
      </div>
{% endblock %}