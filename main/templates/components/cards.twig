#}

{% macro blog(img_url, category,title,serial)%}
<div class="card ml-3" style="width: 21rem;">
    <img class="card-img-top" src="{{img_url}}" style="height: 12rem;" rel="nofollow" alt="{{name}}">
    <div class="card-body text-center">
        <p class="card-text">
            <p class="category">{{category|upper}}</p>
            <a class="title" href="?page=post&s={{serial}}">{{title}}</a>
        </p>
    </div>
</div>
{% endmacro %}
{% macro icon_top(icon, color, title, description)%}
<div class="info">
    <div class="icon icon-{{color}}">
        <i class="material-icons">{{icon}}</i>
    </div>
    <h4 class="info-title">{{title}}</h4>
    <p>{{description|raw}}.</p>
</div>
{% endmacro %}
{% macro icon_left(icon, color, title, description)%}
<div class="info info-horizontal">
            <div class="icon icon-{{color}}">
              <i class="material-icons">{{icon}}</i>
            </div>
            <div class="description">
              <h4 class="info-title">{{title}}</h4>
              <p>{{description|raw}}.</p>
            </div>
          </div>
{% endmacro %}

{% macro recomanded(img_url, title, author, serial)%}
<div class="info info-horizontal">
    <div class="icon">
        <img class="text-right rounded" src="{{img_url}}" style="height: 128px; width: 128px;" alt="{{title}}">
    </div>
    <div class="description">
        <a href="?page=post&s={{serial}}">
        <h5 class="info-title">{{title}}</h5>
        <p class="text-muted">{{author}}</p>
        </a>
    </div>
</div>
{% endmacro %}
{% macro author_small(img_url, author, time)%}
<div class="row">
    <img class="image rounded-circle" src="{{img_url}}" alt="{{author}}">
    <div class="text">
        <p class="author">By {{author}}</p>
        <p class="description">Published on {{time|date('d M Y')}} </p>
    </div>
</div>
{% endmacro %}
{% macro author_big(name, description, username)%}
<div class="card">
          <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted">Written by</h6>
            <h4 class="card-title">{{name}}</h4>
            <p class="card-text">{{description}}</p>
            <div class="text-right">
              <a href="" class="card-link btn btn-sm btn-outline-primary" disabled>Follow</a>
              <a href="?page=profile&username={{username}}" class="card-link btn btn-sm btn-outline-success">Read more posts</a>
            </div>
          </div>
        </div>
{% endmacro %}