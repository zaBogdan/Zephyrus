{#
Name: card
Props: background, icon, text, info, link
#}
{% macro card(background, icon, text, info, link, options = [])%}
<div class="col-xl-3 col-sm-6 mb-3">
    <div class="card text-white bg-{{ background }} o-hidden h-100">
        <div class="card-body">
            <div class="card-body-icon">
                <i class="{{ icon }}"></i>
            </div>
            <div class="mr-5"><b>{{ options.dynamic }}</b> {{ text }}</div>
        </div>
        <a class="card-footer text-white clearfix small z-1" href="{{ link }}">
            <span class="float-left">{{ info }}</span>
            <span class="float-right">
                <i class="fas fa-angle-right"></i>
            </span>
        </a>
    </div>
</div>
{% endmacro %}