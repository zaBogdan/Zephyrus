{% extends 'auth.twig' %}

{% block content %}

{% import 'components/forms.twig' as forms %}
{% set response = loginProcess() %}
<div class="card card-login mx-auto mt-5">
  <div class="card-header">Login</div>
  <div class="card-body">
    <div class="text-center mb-4">
      <p>{{ response }}</p>
    </div>
    <form action="" method="post">
      <div class="form-group">
        {{ forms.input("username","Enter your username",login.values.username, {'autofocus': true}) }}
      </div>
      <div class="form-group">
        {{ forms.input("password","Enter your password",null, {'type': 'password'}) }}
      </div>
      <div class="form-group">
        {{ forms.radio("Remember password",'remember-me',true,{'name': 'Remember password'}) }}
      </div>
      <button class="btn btn-primary btn-block" name="submit">Login</button>
    </form>
    <div class="text-center">
      <a class="d-block small mt-3" href="/admin/auth/register">Register an Account</a>
      <a class="d-block small" href="/admin/auth/forgot-password">Forgot Password?</a>
    </div>
  </div>
</div>
{% endblock %}