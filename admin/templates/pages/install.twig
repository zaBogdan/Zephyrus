{% extends 'auth.twig' %}

{% block content %}
<div class="container mx-auto mt-5">
        <div class="jumbotron text-center">
          <h1 class="display-4">Run the initial setup</h1>
          <p class="lead">Click down to automatically install the musts for the application</p>
          <hr class="my-4">
          <p>
              {{(install.responses|join('<br>')|raw)}}
            </p>
          <p class="lead">
            {% if install.must == 1 %}
            <a class="btn btn-success btn-lg" href="/admin" role="button">Go home</a>
            {% else %}
            <a class="btn btn-primary btn-lg" href="?run=true" role="button">Install</a>

            {% endif %}
        </p>
        </div>
{% endblock %}