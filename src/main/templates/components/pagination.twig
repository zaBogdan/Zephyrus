{% macro page(name, page_number,total_pages, offset=2) %}
<nav aria-label="{{name}}">
  <ul class="pagination justify-content-center">
    {% if page_number != 1 %}
    <li class="page-item">
      <a class="page-link" href="{{currentUrl()}}&pg={{page_number-1}}">Previous</a>
    </li>
    {% endif %}
    {% set first_page = page_number-offset>=1 ? page_number-offset : 1 %}
    {% set last_page = page_number+offset<=total_pages ? page_number+offset : total_pages %}
    {% for i in range(first_page,last_page) %}
    <li class="page-item {{ i==page_number ? "active" : null }}"><a class="page-link" href="{{currentUrl()}}&pg={{i}}">{{i}}</a></li>
    {% endfor %}
    {% if page_number != total_pages %}
    <li class="page-item">
      <a class="page-link" href="{{currentUrl()}}&pg={{page_number+1}}">Next</a>
    </li>
    {% endif %}
  </ul>
</nav>
{% endmacro %}